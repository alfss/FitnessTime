.main-header {
  background: url(../Images/MainPageImages/bg1.jpg) 50% 0 no-repeat fixed;
  background-size: cover;
  font-family: "roboto", sans-serif;

  &__overlay {
    background: alpha(#1d232d, 0.5);
  }

  &__wrapper {
    display: flex;
    color: #fff;

    @media (max-width: 768px) {
      flex-direction: column;
    }
  }

  &__left {
    width: $width * 7;

    @media (max-width: 768px) {
      margin-bottom: 55px;
      width: 100%;
      text-align: center;
    }
  }
  &__right {
    width: $width * 5

    @media (max-width: 768px) {
      width: 100%;
    }
  }

  &__heading {
    font-size: 72px;
    margin-top: 50px;
    margin-bottom: 30px;
    font-weight: 100;

    @media (max-width: 768px) {
      margin-top: 15px;
    }

    &_h2 {
      font-size: 32px;
      font-weight: 300;
      margin-bottom: 30px;
    }
  }
  &__paragraph {
    font-size: 18px;
    margin-bottom: 70px;
    letter-spacing: 1px;
    font-weight: 300;
    line-height: 28px;
  }

  &__action {
    @media (max-width: 768px) {
      text-align: center;
    }
  }

  &__button {
    font-size: 28px;
    font-weight: 400;
    margin-bottom: 50px;
    padding: 10px 16px;
    padding-right: 20px;
    transition: all .3s;
    background-color: transparent;
    border-radius: 0;
    border: 2px solid #fff;
    line-height: 1.33;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    text-decoration: none;

    &:visited {
      color: inherit;
    }

    &:hover {
      background-color: $material-blue;
    }

    @media (max-width: 768px) {
      font-size: 22px;
    }
  }

  &__img-wrapper{
    max-width: 252px;
    margin: auto;
    padding-bottom: 50px;
  }
  &__img {
    max-width: 100%;
    width: 252px;
    height: auto;
  }
}
