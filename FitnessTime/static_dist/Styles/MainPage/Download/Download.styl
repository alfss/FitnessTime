.main-download {
  background: url(../Images/MainPageImages/bg2.jpg) 50% 0 no-repeat fixed;
  background-size: cover;

  &__overlay {
    background: alpha(#000, 0.5);
  }

  &__wrapper {
    color: #fff;
    background-image: url(../Images/MainPageImages/pattern.png);
  }

  &__items {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;;
  }

  &__item {
    position: relative;
    text-decoration: none;
    color: #fff;
    font-size: 28px;
    padding: 12px 0 10px;
    min-width: 280px;
    margin-bottom: 50px;
    background-color: transparent;
    border: 2px solid #fff;
    transition: all 0.3s;
  }

  &__info {
    margin-left: 80px;
    margin-right: 15px;
  }

  &__icon {
    position: absolute;
    left: 0;
    top: 0;
    width: 80px;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 50px;

    &_google {
       background-image: url(../Images/MainPageImages/google.svg);
     }
    &_apple {
       background-image: url(../Images/MainPageImages/apple.svg);
     }
    &_desctop {
      background-image: url(../Images/MainPageImages/desctop.svg);
      background-size: 70px;
    }
  }
}
