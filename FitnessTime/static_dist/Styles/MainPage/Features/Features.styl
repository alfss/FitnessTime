.main-features {

  &__wrapper {
    display: flex;

    @media (max-width: 992px) {
      flex-direction: column;
    }
  }

  &__left {
    width: $width * 4;

    @media (max-width: 992px) {
      width: 100%;
    }
  }

  &__right {
    width: $width * 8;
    display: flex;
    flex-wrap: wrap;

    @media (max-width: 992px) {
      width: 100%;
    }
  }

  &__img-wrapper {
    width: 252px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 50px;
  }

  &__img {
    display: block;
    width: 100% \9;
    max-width: 100%;
    height: auto;
  }

  &__item {
    width: $width * 6;
    position: relative;
    padding-right: 7px;
    box-sizing: border-box;

    &:hover .main-features__icon-wrapper {
      border-radius: 0;
    }

    @media (max-width: 768px) {
      width: 100%;
      margin-left: 24px;
    }
  }

  &__info {
    margin-left: 80px;
  }

  &__headline {
    font-size: 24px;
    margin-top: 10px;
    margin-bottom: 20px;
    color: #2E2E2E;
    font-weight: 400;
  }

  &__paragraph {
    margin-bottom: 50px;
    letter-spacing: 0.5px;
    line-height: 28px;
  }

  &__icon-wrapper {
    position: absolute;
    left: 0;
    top: 12px;
    width: 60px;
    height: 60px;
    border-radius: 100%;
    border: 1px solid $material-blue;
    text-align: center;
    padding: 15px 0;
    transition: all 0.5s;
    box-sizing: border-box;
  }

  &__icon {
    position: absolute;
    width: 100%;
    height: 30px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 25px;

    &_mobile {
      background-image: url("../Images/MainPageImages/mobile.svg");
    }
  }


}
