
.login {
  min-height: 100vh;
  background-color: $material-blue;
  padding: 14px;
  box-sizing: border-box;
  display: flex;

  &__form {
    width: 100%;
    height: 100%;
    align-self: center;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    text-align: center;
  }

  &__paragraph {
    margin-top: 0;
    font-size: 14px;
  }

  &__list {
    margin: 0;
    padding: 0;
    border-bottom: 1px solid #ccc;
  }

  &__item {
    list-style: none;
    margin: 0 auto 15px;

    &_input {
      border: 1px solid $material-blue;
      border-radius: 5px;
      width: 100%;
    }
  }

  &__input {
    outline: none;
    box-sizing: border-box;
    border: 0 solid transparent;
    width: calc(100% - 28px);
    border-radius: 0 4px 4px 0;
    padding-left: 7px;
    height: 38px;
    transition: border .5s ease;

    &:focus {
      border: 1px solid $material-blue;
      border-left: none;
    }

    &:hover {
      border: 1px solid $material-blue;
      border-left: none;
    }
  }

  &__icon {
    float: left;
    border-radius: 4px 0 0 4px;
    width: 28px;
    height: 38px;
    background:  no-repeat 2px 7px $material-blue;
    background-size: 24px;

    &_user {
      background-image: url(../Images/user.svg);
    }

    &_password {
      background-image: url(../Images/lock.svg);
      background-size: 17px;
      background-position: 5px 10px;
    }
  }

  &__social {
    display: block;
    color: #fff;
    text-decoration: none;
    margin-bottom: 15px;

    &_gp {
      background: #DE4C34;

      &:hover {
        background-color: #CE3E26;
      }
    }

    &_vk {
      background: #5480b1;

      &:hover {
        background-color: #507299;
      }
    }
  }

  &__social-icon {
    float: left;
    width: 43px;
    height: 40px;

    &_gp {
      background: #CE3E26 url(../Images/gp.svg) 6px no-repeat;
      background-size: 30px;
    }

    &_vk {
      background: #507299 url(../Images/vk.svg) 6px no-repeat;
      background-size: 30px;
    }
  }

  &__social-name {
    display: inline-block;
    padding: 11px;
  }

  &__submit {
    width: 100%;
    cursor: pointer;
    background-color: $material-blue;
    border: none;
    border-radius: 4px;
    color: #fff;
    padding: 6px 15px;

    &:hover {
      background-color: darken($material-blue, 10%);
    }
  }

  &__link {
    color: $material-blue;

    &:hover {
      color: darken($material-blue, 10%);
    }
  }
}
