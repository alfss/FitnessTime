.modal {

  &__overlay {
    display: flex;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(62, 62, 62, .9);

    &_app {
      top: 70px;
    }
  }

  &__content {
    border: 1px solid rgb(204, 204, 204);
    overflow: auto;
    border-radius: 4px;
    outline: none;
    margin: auto;
    padding: 10px;
    background: rgb(255, 255, 255);
  }

  &__image {
    max-width: 100%;
    max-height: 100%;
  }

  &__app {
    width: 64px;
    height: 64px;
    margin: auto;
    background-image: url(../images/preloader.gif);
    background-size: contain;
    transform: translateY(-50%);
  }

  &__close-btn {
    width: 35px;
    height: 35px;
    position: absolute;
    top: 10px;
    right: 10px;
    background: url(../images/close.svg) no-repeat;
    background-size: contain;
  }
}
