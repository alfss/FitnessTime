.app {
  position: relative;
  overflow-x: hidden;
  min-height: 100vh;
  background-color: $light-grey;

  &__container {
    background-color: #fff;

    @media (min-width: 540px) {
      width: 540px
      min-height: calc(100vh - 66px);
      margin: auto;
      box-shadow: 0px 8px 15px 4px alpha(#000, .2);
    }
  }
}
