.stopwatch {
  margin-bottom: 10px;

  &__info {
    display: flex;
    justify-content: space-between;
  }

  &__rest-timer, &__repeat-count {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  &__controls {
    text-align: center;
  }

  &__finish {
    margin-bottom: $gutter;
    font-size: 1.3rem;
    text-align: center;
  }
}
