.form {
  background-color: $background;
  display: flex;
  flex-direction: column;
  padding: $gutter-big;
  min-height: 100vh;
  box-sizing: border-box;

  &__heading {
    text-align: center;
    color: $text-color;
  }

  &__label {
    font-size: 12px;
    color: $text-color;
    margin-bottom: 17px;
  }

  &__input {
    font-size: 1rem;
    color: $text-color;
    width: 100%;
    box-sizing: border-box;
    margin-top: 10px;
    padding: 6px;
    border: 2px solid $material-blue-rgba-light;
    border-radius: 3px;

    &:focus {
      border-color: $material-blue-rgba-medium;
      outline: none;
    }

    &_file {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
      width: 250px;
      height: 150px;
      border: 2px dashed $text-color;
      box-sizing: border-box;
      padding: 0px 15px;
    }
  }

  &__input-text {
    text-align: center;
    color: $text-color;
  }

  &__image {
    box-shadow: 1px 1px 5px 0 #666666;
    padding: 5px;
  }

  &__controls {
    margin-top: $gutter-big;
    text-align: center;
  }

  &__error {
    margin-left: 10px;
    color: red;
    font-size: 10px;
  }
}
